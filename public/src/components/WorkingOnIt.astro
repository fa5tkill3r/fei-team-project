---
import { Image } from "astro:assets"
import img from "../assets/working-on-it.png"

interface Props {
  message: string
}

const { message } = Astro.props
---

<article>
  <Image
    src={img}
    class="mx-auto w-40 mb-4"
    alt="Working on it"
  />
  <h1 class="font-bold text-center text-xl">{message}</h1>
</article>
