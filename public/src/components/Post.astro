---
interface Props {
  title: string
  body: string
  href: string
}

const { href, title, body } = Astro.props
---

<div class="p-3 rounded-md shadow-lg transition ease-in-out delay-50 hover:-translate-y-1 hover:scale-105 duration-300">
  <a href={href}>
    <h2 class="text-lg font-semibold text-center mb-4">
      {title}
    </h2>
    <p class="text-sm truncate px-5">{body}</p>
  </a>
</div>
